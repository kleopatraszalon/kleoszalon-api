{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
 "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.tsx",
    "src/api.ts",               // <-- ez fontos: frontend util kizÃ¡rva
    "frontend/**",
    "node_modules/**"
  ]
}

