    "nodemailer": "^7.0.10",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.11",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.6",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
